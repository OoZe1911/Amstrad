{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-rasm",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "rasm",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}